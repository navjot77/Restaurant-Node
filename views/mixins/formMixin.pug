mixin addForm(store = {})
    form(action=`/add/${store._id || ''}` method='POST' class='card' enctype="multipart/form-data")
        label(for="name") Name
        input(type='text' id='input-ww' name="name" value=store.name )
        label(for="Description") Description
        textarea(name="description")=store.description
        label(for="image") Image
        input(type='file' name='image' id='image')
        if (store.image)
            img(src=`/uploads/${store.image}` alt='Store Image.')

        label(for="address") Address
        input(type='text' id='address' name="position[address]" value=(store.position && store.position.address) )
        label(for="long") Longitude
        input(type='text' id='long' name="position[cordinates][0]" value=(store.position && store.position.cordinates[0]) )
        label(for="lat") Latitude
        input(type='text' id='lat' name="position[cordinates][1]" value=(store.position && store.position.cordinates[1]) )


        -const list=['Vegeterian','Open Late','Parking', 'Wi-Fi'];
        -const tagsS=store.tags || ''
        ul.tags
            each item in list
                .tags.tag__choice
                    input(type='checkbox' id=item name='tags' value=item checked=(
                      tagsS.includes(item)) )
                    label(for='tags')=item

        input(type='submit' value="save" class='button')