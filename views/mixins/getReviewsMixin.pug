mixin getReviews(review)
    .review__header
        .review__author
            img.avatar(src=`${review.author.gravatar}`)
            p=review.author.name
        .review__stars(title=`Rated ${review.rating}`)
            !='&#10029'.repeat(review.rating)
            !='&#10025'.repeat(5-review.rating)
        time.review__time(datetime=review.created)=h.moment(review.created).fromNow()
    .review__body
        p=review.comment
